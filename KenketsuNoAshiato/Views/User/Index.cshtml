@using KenketsuNoAshiato.EF
@using KenketsuNoAshiato.Models
@model UserModel
<!DOCTYPE html>
<html lang="ja">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="献血のあしあと-献血の記録を、楽しく、静かに、続けるためのスタンプ帳-">
    <meta content="献血のあしあと-献血の記録を、楽しく、静かに、続けるためのスタンプ帳-" name="description">
    <meta property="og:type" content="website" />
    <meta property="og:description" content="献血のあしあと-献血の記録を、楽しく、静かに、続けるためのスタンプ帳-" />
    <meta property="og:image" content="https://kenketsu-ashiato.noobow.me/image/ashiatologo.png" />
    <meta property="og:url" content="https://kenketsu-ashiato.noobow.me/u/@Model.User.UserId" />
    <meta property="og:site_name" content="献血のあしあと" />
    <meta content="summary" name="twitter:card" />
    <meta content="@@noobow" name="twitter:site" />
    <title>
        献血のあしあと
        @if (!string.IsNullOrEmpty(Model.User.UserName))
        {
            <text>（@Model.User.UserName さん）</text>
        }
    </title>
    <style>
        body {
            font-family: "Helvetica Neue", Arial, "Hiragino Kaku Gothic ProN", "Hiragino Sans", Meiryo, sans-serif;
            max-width: 1000px;
            margin: 0 auto;
            padding: 20px;
            color: #333;
            user-select: none;
        }

        h1 {
            text-align: center;
            margin-bottom: 40px;
        }

        .status-bar {
            text-align: center;
            margin-bottom: 30px;
            font-weight: bold;
            background: #ffebeb;
            padding: 10px;
            border-radius: 8px;
            color: #d32f2f;
            display: flex;
            justify-content: center;
            gap: 20px;
        }

        .reset-btn {
            background: #fff;
            border: 1px solid #d32f2f;
            color: #d32f2f;
            border-radius: 4px;
            cursor: pointer;
            padding: 2px 10px;
            font-size: 0.8em;
        }

        .region-section {
            margin-bottom: 60px;
        }

        .region-title {
            border-bottom: 2px solid #ff0000;
            padding-bottom: 10px;
            margin-bottom: 20px;
            font-size: 1.5em;
        }

        /* ===== 地区アコーディオン ===== */
        .accordion-header {
            cursor: pointer;
            padding: 14px 16px;
            background: #ffecec;
            border-radius: 10px;
            margin-bottom: 10px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            font-weight: bold;
        }

        .accordion-header::after {
            content: "▼";
            margin-left: 10px;
            transition: transform 0.2s;
        }

        .accordion-header.open::after {
            transform: rotate(-180deg);
        }

        .accordion-content {
            display: none;
            margin-bottom: 40px;
        }

            .accordion-content.open {
                display: block;
            }

        /* 地区進捗 */
        .region-center {
            text-align: center;
            min-width: 170px;
        }

        .region-text {
            font-size: 0.85em;
            color: #444;
        }

        .region-bar {
            height: 6px;
            background: #ddd;
            border-radius: 4px;
            overflow: hidden;
            margin-top: 4px;
        }

        .region-bar-fill {
            height: 100%;
            width: 0%;
            background: #d32f2f;
            transition: width 0.3s;
        }

        /* ===== 都道府県 ===== */
        .pref-header {
            cursor: pointer;
            padding: 10px 12px;
            margin: 18px 0 8px;
            background: #fafafa;
            border-left: 4px solid #d32f2f;
            border-radius: 6px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            font-weight: bold;
        }

        .pref-left {
            display: flex;
            align-items: center;
            gap: 6px;
        }

        .pref-arrow {
            font-size: 0.8em;
            transition: transform 0.2s;
        }

        .pref-header.open .pref-arrow {
            transform: rotate(-180deg);
        }

        /* 県進捗（省スペース） */
        .pref-right {
            display: flex;
            align-items: center;
            gap: 8px;
            font-size: 0.8em;
            color: #444;
        }

        .pref-bar {
            width: 60px;
            height: 5px;
            background: #ddd;
            border-radius: 3px;
            overflow: hidden;
        }

        .pref-bar-fill {
            height: 100%;
            width: 0%;
            background: #d32f2f;
            transition: width 0.3s;
        }

        .pref-content {
            display: none;
        }

        .pref-content.open {
            display: block;
        }

        .room-list {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
            gap: 20px;
        }

        .room-card {
            border: 1px solid #eee;
            border-radius: 8px;
            overflow: hidden;
            box-shadow: 0 2px 5px rgba(0,0,0,0.1);
            text-align: center;
            padding-bottom: 10px;
            cursor: pointer;
            position: relative;
            transition: transform 0.1s;
        }

            .room-card:active {
            transform: scale(0.98);
        }

        .room-card:focus {
            outline: 2px dashed #d32f2f;
        }

        .room-image {
            width: 100%;
            height: 150px;
            object-fit: cover;
            background-color: #f0f0f0;
            display: block;
            transition: opacity 0.3s;
        }

        .room-name {
            margin-top: 10px;
            font-weight: bold;
            font-size: 0.95em;
            padding: 0 10px;
        }

        /* 訪問済みスタイル */
        .room-card.visited .room-image {
            opacity: 0.5;
            filter: grayscale(30%);
        }

        /* スタンプ */
        .stamp-mark {
            position: absolute;
            inset: 0; /* Flex中央配置のため */
            display: flex;
            justify-content: center;
            align-items: center;
            pointer-events: none;
            z-index: 10;
        }

        .animate-stamp .stamp-inner {
            animation: stamp-pop 0.3s cubic-bezier(0.175, 0.885, 0.32, 1.275);
        }

        .stamp-inner {
            width: 90px;
            height: 90px;
            border: 3px double #d32f2f;
            border-radius: 50%;
            background-color: rgba(255,255,255,0.9);
            color: #d32f2f;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            box-shadow: 2px 2px 5px rgba(0,0,0,0.2);
            /* ここで回転はJSでランダムに追加 */
        }

        .stamp-title {
            font-size: 28px;
            font-weight: bold;
            line-height: 1;
            margin-top: 5px;
        }

        .stamp-date-line {
            width: 70%;
            height: 1px;
            background-color: #d32f2f;
            margin: 4px 0;
        }

        .stamp-date {
            font-size: 13px;
            font-weight: bold;
            font-family: monospace;
        }

        @@keyframes stamp-pop {
            0% {
                transform: scale(0);
                opacity: 0;
            }

            100% {
                transform: scale(1);
                opacity: 1;
            }
        }

        /* モーダル日付入力 */
        #dateModal {
            display: none;
            position: fixed;
            inset: 0;
            background-color: rgba(0,0,0,0.4);
            justify-content: center;
            align-items: center;
            z-index: 50;
        }

        #dateModalContent {
            background: #fff;
            padding: 20px;
            border-radius: 8px;
            text-align: center;
        }

        #dateModal input[type="date"] {
            font-size: 1em;
            padding: 5px;
        }

        #dateModal button {
            margin: 10px 5px 0 5px;
            padding: 5px 10px;
            border-radius: 4px;
            border: 1px solid #d32f2f;
            background: #fff;
            color: #d32f2f;
            cursor: pointer;
        }

        .status-bar.overall {
            background: #fff5f5;
            border: 2px solid #d32f2f;
            align-items: center;
        }

        .overall-title {
            font-size: 1.1em;
            font-weight: bold;
            color: #d32f2f;
        }

        .overall-left,
        .overall-center,
        .overall-right {
            display: flex;
            align-items: center;
        }

        .overall-center {
            flex-direction: column;
            min-width: 200px;
        }

        .overall-center .region-bar {
            width: 180px;
        }

        .bookmark-guide {
            background: #fff5f5;
            border: 2px dashed #d32f2f;
            border-radius: 10px;
            padding: 14px 16px;
            margin-bottom: 30px;
            text-align: center;
        }

        .bookmark-title {
            font-size: 0.9em;
            font-weight: bold;
            color: #d32f2f;
            margin-bottom: 10px;
        }

        .bookmark-actions {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            align-items: center;
            gap: 8px;
        }

        .bookmark-actions input {
            width: 320px;
            padding: 6px 8px;
            font-size: 0.85em;
            border: 1px solid #d32f2f;
            border-radius: 6px;
            background: #fff;
            color: #333;
        }

        .bookmark-actions input:focus {
            outline: none;
            box-shadow: 0 0 0 2px rgba(211, 47, 47, 0.15);
        }

        .bookmark-actions button {
            padding: 6px 12px;
            font-size: 0.85em;
            border-radius: 6px;
            border: 1px solid #d32f2f;
            background: #fff;
            color: #d32f2f;
            cursor: pointer;
            white-space: nowrap;
        }

        .bookmark-actions button:hover {
            background: #ffecec;
        }

        .bookmark-actions button:active {
            transform: scale(0.97);
        }

        .bookmark-message {
            display: none;
            margin-top: 6px;
            font-size: 0.8em;
            color: #2e7d32;
        }

        .bookmark-actions button:disabled {
            color: #aaa;
            border-color: #ddd;
            background: #f5f5f5;
            cursor: not-allowed;
            opacity: 0.6;
        }

        .bookmark-actions button:disabled:hover {
            background: #f5f5f5;
        }

        .bookmark-actions button:disabled:active {
            transform: none;
        }

        .bookmark-actions input:disabled,
        .bookmark-actions input[readonly]:placeholder-shown {
            color: #999;
            background: #fafafa;
        }

        /* ===== シェア用（閲覧専用） ===== */
        .share-view .room-card {
            cursor: default;
        }

            .share-view .room-card:active {
                transform: none;
            }

            .share-view .room-card:focus {
                outline: none;
            }

        .share-icons {
            display: flex;
            gap: 10px;
            align-items: center;
        }

            .share-icons img {
                width: 28px;
                height: 28px;
                cursor: pointer;
                transition: transform 0.15s, opacity 0.15s;
            }

            .share-icons a:hover img {
                transform: scale(1.1);
                opacity: 0.85;
            }

            .share-icons a:active img {
                transform: scale(0.95);
            }

        @@media (max-width: 600px) {
            .bookmark-actions {
                flex-direction: column;
                align-items: stretch;
            }

                .bookmark-actions input {
                    width: 100%;
                }

                .bookmark-actions button {
                    width: 100%;
                }

            .share-icons {
                justify-content: center;
                margin-top: 6px;
            }
        }

        .drag-handle {
            cursor: grab;
            margin-right: 8px;
            font-size: 1.2em;
            color: #999;
        }

            .drag-handle:active {
                cursor: grabbing;
            }

        .accordion-header:hover,
        .pref-header:hover {
            background: #ffdede;
            cursor: grab;
        }

        .accordion-left {
            display: flex;
            align-items: center;
            gap: 8px;
        }

        /* ===== 並び替えモード ===== */
        .sort-mode .accordion-header {
            background: #fff3f3;
            cursor: grab;
        }

        .sort-mode .pref-header {
            cursor: grab;
        }

        .sort-mode .accordion-header::after,
        .sort-mode .pref-arrow {
            opacity: 0.3; /* 開閉UIを弱める */
        }

        .sort-mode .drag-handle {
            display: inline;
            color: #d32f2f;
        }

        .drag-handle {
            display: none; /* 通常時は非表示 */
        }
    </style>
</head>
<body class="@(Model.IsShare ? "share-view" : "")"
      data-user-id="@Model.User.UserId">

    <h1>
        献血のあしあと
        @if (!string.IsNullOrEmpty(Model.User.UserName))
        {
            <text>（@Model.User.UserName さん）</text>
        }
    </h1>
    <div class="status-bar overall">
        <div class="overall-left">
            <span class="overall-title">全国進捗</span>
        </div>

        <div class="overall-center">
            <div class="region-text" id="overall-text">0 / 0（0%）</div>
            <div class="region-bar">
                <div class="region-bar-fill" id="overall-bar"></div>
            </div>
        </div>

        @if (!Model.IsShare)
        {
            <div class="overall-right">
                <button id="reset-all" class="reset-btn">全記録削除</button>
            </div>
        }
    </div>
    @if(!Model.IsShare)
    {
        <div class="bookmark-guide">
            <div class="bookmark-title">
                📌 このページのURLをブックマークしてご使用ください
            </div>

            <div class="bookmark-actions">
                <input type="text" id="pageUrl" readonly>
                <button id="copyUrlBtn">コピー</button>
            </div>

            <div class="bookmark-message" id="copyMessage">
                ✔ URLをコピーしました
            </div>
        </div>
        <div class="bookmark-guide">
            <div class="bookmark-title">
                🔗 シェア用URLを発行（このURLでアクセスすると編集不可・閲覧専用になります）

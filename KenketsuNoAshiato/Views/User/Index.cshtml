        <div class="bookmark-guide">
            <div class="bookmark-title">
                🔗 このページはシェア用（編集不可・閲覧専用）です
            </div>

            <div class="bookmark-actions">
                <input type="text"
                       id="shareUrl"
                       readonly
                       value="@(!string.IsNullOrEmpty(Model.ShareId) ? $"/s/{Model.ShareId}" : "")">
                <button id="copyShareUrlBtn" @(string.IsNullOrEmpty(Model.ShareId) ? "disabled" : "")>コピー</button>
                <div class="share-icons">
                    <a id="share-x" target="_blank" title="Xでシェア">
                        <img src="/image/share/x.svg" alt="X">
                    </a>
                    <a id="share-fb" target="_blank" title="Facebookでシェア">
                        <img src="/image/share/facebook.svg" alt="Facebook">
                    </a>
                    <a id="share-line" target="_blank" title="LINEでシェア">
                        <img src="/image/share/line.svg" alt="LINE">
                    </a>
                </div>
            </div>
            <div class="bookmark-message" id="shareMessage">
                ✔ シェア用URLをコピーしました
            </div>
        </div>
    }
    <section id="region-sortable">
        <div class="overall-right">
        @if (!Model.IsShare)
        {
            <button id="toggleSortMode" class="reset-btn">
                🔀 並び替え
            </button>
            <button id="resetSort" class="reset-btn">
                🔄 並び替えリセット
            </button>
        }
            <button id="openAllAccordion" class="reset-btn">
                📂 すべて開く
            </button>
            <button id="closeAllAccordion" class="reset-btn">
                📁 すべて閉じる
            </button>
            <button id="closeAllPref" class="reset-btn">
                📁 都道府県をすべて閉じる
            </button>
        </div>
        @foreach (var cb in Model.CenterBlocks.OrderBy(cb => cb.DisplayOrder))
        {
                <div class="accordion-region" data-center-id="@cb.CenterBlockId">

                <div class="accordion-header open" data-region="@cb.CenterBlockId">
                    <div class="accordion-left">
                        <span class="drag-handle">≡</span>
                        <span class="region-name">@cb.CenterBlockName</span>
                    </div>
                    <div class="region-center">
                        <div class="region-text" id="region-@cb.CenterBlockId-text">0 / 0（0%）</div>
                        <div class="region-bar">
                            <div class="region-bar-fill" id="region-@cb.CenterBlockId-bar"></div>
                        </div>
                    </div>
                </div>

                    <div class="accordion-content open pref-sortable" data-center-id="@cb.CenterBlockId">
                    @{
                        var prefs = Model.Prefectures
                        .Where(p => p.CenterBlockId == cb.CenterBlockId)
                        .OrderBy(p => p.DisplayOrder);
                    }

                    @foreach (var p in prefs)
                    {
                        <div class="pref-block" data-pref-id="@p.PrefId">
                            <div class="pref-header open" data-pref="@p.PrefId">
                                <div class="pref-left">
                                    <span class="drag-handle">≡</span>
                                    <span class="pref-arrow">▼</span>
                                    @p.PrefName
                                </div>
                                <div class="pref-right">
                                    <span id="pref-@p.PrefId-text">0 / 0</span>
                                    <div class="pref-bar">
                                        <div class="pref-bar-fill" id="pref-@p.PrefId-bar"></div>
                                    </div>
                                </div>
                            </div>

                            <div class="pref-content open">
                                <div class="room-list">
                                    @foreach (var r in Model.Rooms.Where(r => r.PrefId == p.PrefId).OrderBy(r => r.DisplayOrder))
                                    {
                                        <div class="room-card" data-id="@r.RoomId">
                                            <img src="@r.ImagePath" alt="@r.RoomName" class="room-image">
                                            <div class="room-name">@r.RoomName</div>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        }
    </section>

    @if (!Model.IsShare)
    {
        <!-- 日付入力モーダル -->
        <div id="dateModal">
            <div id="dateModalContent">
                <p>訪問日を選択してください</p>
                <input type="date" id="modalDateInput">
                <div>
                    <button id="modalSaveBtn">保存</button>
                    <button id="modalSaveWithoutDateBtn">日付なしで保存</button>
                    <button id="modalDeleteBtn">削除</button>
                    <button id="modalCancelBtn">キャンセル</button>
                </div>
            </div>
        </div>
    }
    <script src="https://cdn.jsdelivr.net/npm/sortablejs@1.15.2/Sortable.min.js"></script>
    <script>
        const updateShareLinks = (url) => {
            const encoded = encodeURIComponent(url);
            document.getElementById('share-x').href =
                `https://twitter.com/intent/tweet?url=${encoded}&text=献血のあしあと`;
            document.getElementById('share-fb').href =
                `https://www.facebook.com/sharer/sharer.php?u=${encoded}`;
            document.getElementById('share-line').href =
                `https://social-plugins.line.me/lineit/share?url=${encoded}`;
        };
        let sortMode = false;
        document.addEventListener('DOMContentLoaded', () => {
            const cards = document.querySelectorAll('.room-card');
            const resetBtn = document.getElementById('reset-all');
            const userId = '@Model.User.UserId';

            let visitedData = {};
            let currentCard = null;

            const shareUrlInput = document.getElementById("shareUrl");

             const openAllAccordion = () => {
                document.querySelectorAll('.accordion-header').forEach(h => {
                    h.classList.add('open');
                    h.nextElementSibling?.classList.add('open');
                });

                document.querySelectorAll('.pref-header').forEach(h => {
                    h.classList.add('open');
                    h.nextElementSibling?.classList.add('open');
                });
            };

            const closeAllAccordion = () => {
                document.querySelectorAll('.accordion-header').forEach(h => {
                    h.classList.remove('open');
                    h.nextElementSibling?.classList.remove('open');
                });
                document.querySelectorAll('.pref-header').forEach(h => {
                    h.classList.remove('open');
                    h.nextElementSibling?.classList.remove('open');
                });
            };

            const closeAllPref = () => {
                document.querySelectorAll('.pref-header').forEach(h => {
                    h.classList.remove('open');
                    h.nextElementSibling?.classList.remove('open');
                });
            };

            document.getElementById('openAllAccordion')
                .addEventListener('click', openAllAccordion);

            document.getElementById('closeAllAccordion')
                .addEventListener('click', closeAllAccordion);

            document.getElementById('closeAllPref')
                .addEventListener('click', closeAllPref);

            // ブロック進捗
            const updateRegionProgress = () => {
                document.querySelectorAll('.accordion-header[data-region]').forEach(header => {
                    const region = header.dataset.region;
                    const cards = header.nextElementSibling.querySelectorAll('.room-card');

                    const total = cards.length;
                    let visited = 0;
                    cards.forEach(c => { if (visitedData[c.dataset.id]) visited++; });

                    const percent = total === 0 ? 0 : Math.floor(visited / total * 100);

                    document.getElementById(`region-${region}-text`)
                        .textContent = `${visited} / ${total}（${percent}%）`;
                    document.getElementById(`region-${region}-bar`)
                        .style.width = percent + "%";
                });
            };

            // 都道府県進捗
            const updatePrefProgress = () => {
                document.querySelectorAll('.pref-header[data-pref]').forEach(header => {
                    const pref = header.dataset.pref;
                    const cards = header.nextElementSibling.querySelectorAll('.room-card');

                    const total = cards.length;
                    let visited = 0;
                    cards.forEach(c => { if (visitedData[c.dataset.id]) visited++; });

                    const percent = total === 0 ? 0 : Math.floor(visited / total * 100);

                    document.getElementById(`pref-${pref}-text`).textContent = `${visited} / ${total}`;
                    document.getElementById(`pref-${pref}-bar`).style.width = percent + "%";
                });
            };

            // 全国進捗
            const updateOverallProgress = () => {
                const total = cards.length;
                let visited = 0;

                cards.forEach(c => {
                    if (visitedData[c.dataset.id]) visited++;
                });

                const percent = total === 0 ? 0 : Math.floor(visited / total * 100);

                document.getElementById('overall-text')
                    .textContent = `${visited} / ${total}（${percent}%）`;
                document.getElementById('overall-bar')
                    .style.width = percent + "%";
            };

            document.getElementById('copyShareUrlBtn').addEventListener('click', async () => {
                await navigator.clipboard.writeText(document.getElementById("shareUrl").value);
                const msg = document.getElementById('shareMessage');
                msg.style.display = "block";
                setTimeout(() => {
                    msg.style.display = "none";
                }, 2000);
            });

            // 初期ロード
            const loadDataFromServer = async (userId) => {
                const res = await fetch('/Data/GetAll?userId=@Model.User.UserId');
                const list = await res.json();

                visitedData = {};
                list.forEach(x => {
                    visitedData[x.roomId] = {
                        date: x.date,
                        angle: x.angle
                    };
                });

                renderView();
            };

            const renderView = () => {
                cards.forEach(card => {
                    card.classList.remove('visited');
                    const existing = card.querySelector('.stamp-mark');
                    if (existing) existing.remove();
                });

                let count = 0;
                cards.forEach(card => {
                    const id = card.dataset.id;
                    if (visitedData[id]) {
                        count++;
                        card.classList.add('visited');

                        const angle = visitedData[id].angle;
                        let date = visitedData[id].date;
                        if (date == null) {
                            date = "";
                        }

                        const stampHtml = `
                            <div class="stamp-mark">
                                <div class="stamp-inner" style="transform: rotate(${angle}deg);">
                                    <span class="stamp-title">済👣</span>
                                    <div class="stamp-date-line"></div>
                                    <span class="stamp-date">${date}</span>
                                </div>
                            </div>`;
                        card.insertAdjacentHTML('beforeend', stampHtml);
                    }
                });

                updateRegionProgress();
                updatePrefProgress();
                updateOverallProgress();
            };

            // アコーディオン
            document.querySelectorAll('.accordion-header').forEach(h => {
                h.addEventListener('click', () => {
                    h.classList.toggle('open');
                    h.nextElementSibling.classList.toggle('open');
                });
            });
            document.querySelectorAll('.pref-header').forEach(h => {
                h.addEventListener('click', () => {
                    h.classList.toggle('open');
                    h.nextElementSibling.classList.toggle('open');
                });
            });
                        
            loadDataFromServer(userId);
            if (shareUrlInput.value) {
                shareUrlInput.value = location.origin + shareUrlInput.value;
            }
            if (shareUrlInput.value) {
                updateShareLinks(shareUrlInput.value);
            }

            @if (!Model.IsShare)
            {
            <text>
                // 保存
                    const saveToServer = async (userId, id, date, angle) => {
                        await fetch('/Data/Save', {
                            method: 'POST',
                            headers: { 'Content-Type': 'application/x-www-form-urlencoded' },
                            body: `userId=${userId}&roomId=${id}&date=${date}&angle=${angle}`
                        });
                    };

                    // 削除
                    const deleteFromServer = async (userId, id) => {
                        await fetch('/Data/Delete', {
                            method: 'POST',
                            headers: { 'Content-Type': 'application/x-www-form-urlencoded' },
                            body:  `userId=${userId}&roomId=${id}`
                        });
                    };

                    // モーダル
                    const openModal = (card) => {
                        currentCard = card;
                        const id = card.dataset.id;

                        const modal = document.getElementById('dateModal');
                        const input = document.getElementById('modalDateInput');

                        const today = new Date();
                        const formatter = new Intl.DateTimeFormat('ja-JP', {
                            timeZone: 'Asia/Tokyo',
                            year: 'numeric',
                            month: '2-digit',
                            day: '2-digit'
                        });

                        input.value = visitedData[id]?.date ?? formatter.format(today).replaceAll('/', '-');
                        modal.style.display = 'flex';
                    };

                    const closeModal = () => {
                        document.getElementById('dateModal').style.display = 'none';
                    };

                        // カードクリック
                        cards.forEach(card => {
                            card.addEventListener('click', () => openModal(card));
                        });

                        document.getElementById('modalSaveBtn').addEventListener('click', async () => {
                            const date = document.getElementById('modalDateInput').value;
                            const id = currentCard.dataset.id;

                            if (!visitedData[id]) {
                                visitedData[id] = {
                                    angle: (Math.random() * 30 - 15).toFixed(1)
                                };
                            }

                            visitedData[id].date = date;

                            await saveToServer(userId, id, visitedData[id].date, visitedData[id].angle);
                            renderView();
                            closeModal();
                        });

                        document.getElementById('modalSaveWithoutDateBtn').addEventListener('click', async () => {
                            const id = currentCard.dataset.id;

                            if (!visitedData[id]) {
                                visitedData[id] = {
                                    angle: (Math.random() * 30 - 15).toFixed(1)
                                };
                            }

                            visitedData[id].date = "";

                            await saveToServer(userId, id, visitedData[id].date, visitedData[id].angle);
                            renderView();
                            closeModal();
                        });

                        document.getElementById('modalDeleteBtn').addEventListener('click', async () => {
                            const id = currentCard.dataset.id;
                            delete visitedData[id];

                            await deleteFromServer(userId,id);
                            renderView();
                            closeModal();
                        });

                        document.getElementById('modalCancelBtn').addEventListener('click', async () => {
                            closeModal();
                        });

                        resetBtn.addEventListener('click', async () => {
                            if (!confirm('本当に全データ削除しますか？')) return;

                            await fetch('/Data/Reset', {
                                method: 'POST',
                                headers: { 'Content-Type': 'application/x-www-form-urlencoded' },
                                body:  `userId=${userId}`
                            });

                            visitedData = {};
                            renderView();
                        });

                        // URL表示
                        const urlInput = document.getElementById('pageUrl');
                        urlInput.value = location.href;

                        // コピー
                        document.getElementById('copyUrlBtn').addEventListener('click', async () => {
                            await navigator.clipboard.writeText(location.href);
                            const msg = document.getElementById('copyMessage');
                            msg.style.display = "block";
                            setTimeout(() => {
                                msg.style.display = "none";
                            }, 2000);
                        });

                    });

                    // ===== シェア用URL =====
                    const createShareBtn = document.getElementById('createShareUrlBtn');
                    const shareUrlInput = document.getElementById('shareUrl');
                    const copyShareBtn = document.getElementById('copyShareUrlBtn');
                    const shareMessage = document.getElementById('shareMessage');
                    const delShareBtn = document.getElementById('deleteShareUrlBtn');

                    createShareBtn.addEventListener('click', async () => {
                        createShareBtn.disabled = true;
                        createShareBtn.textContent = '発行中...';

                        const res = await fetch('/User/RegisterShareId', {
                            method: 'POST',
                            headers: { 'Content-Type': 'application/x-www-form-urlencoded' },
                            body: `originalId=@Model.User.UserId`
                        });

                        const shareId = await res.text();

                        const url = `${location.origin}/s/${shareId}`;
                        shareUrlInput.value = url;
                        copyShareBtn.disabled = false;
                        createShareBtn.disabled = true;
                        delShareBtn.disabled = false;
                        createShareBtn.textContent = 'シェア用URL発行';
                        updateShareLinks(url);
                    });

                    delShareBtn.addEventListener('click', async () => {
                                    const res = await fetch('/User/DeleteShareId', {
                                        method: 'POST',
                                        headers: { 'Content-Type': 'application/x-www-form-urlencoded' },
                                        body: `shareId=@Model.ShareId`
                                    });
                                     shareUrlInput.value = "";
                                copyShareBtn.disabled = true;
                                createShareBtn.disabled = false;
                                        delShareBtn.disabled = true;
                                document.getElementById('share-x').removeAttribute('href');
                                document.getElementById('share-fb').removeAttribute('href')
                                document.getElementById('share-line').removeAttribute('href')
                    });

                    copyShareBtn.addEventListener('click', async () => {
                        await navigator.clipboard.writeText(shareUrlInput.value);
                        shareMessage.style.display = 'block';
                        setTimeout(() => {
                            shareMessage.style.display = 'none';
                        }, 2000)
                    });

                new Sortable(document.getElementById('region-sortable'), {
                    animation: 150,
                    handle: '.drag-handle'
                });

                document.querySelectorAll('.pref-sortable').forEach(container => {
                    new Sortable(container, {
                        animation: 150,
                        handle: '.drag-handle'
                    });

                const toggleBtn = document.getElementById('toggleSortMode');
                toggleBtn.onclick = async () => {
                        if (sortMode) {
                            await saveSortOrder();
                        }
                        sortMode = !sortMode;

                        document.body.classList.toggle('sort-mode', sortMode);

                        toggleBtn.textContent = sortMode
                            ? '✅ 並び替え完了'
                            : '🔀 並び替え';
                };

                const resetSortBtn = document.getElementById('resetSort');
                resetSortBtn.onclick = async () => {
                        if (!confirm('並び順を初期状態に戻しますか？')) return;
                        const payload = {
                            userId: '@Model.User.UserId'
                        };

                        await fetch('/User/ResetDisplayOrder', {
                            method: 'POST',
                            headers: { 'Content-Type': 'application/x-www-form-urlencoded' },
                            body: `userId=@Model.User.UserId`
                        });
                        location.reload();
                };

                const collectSortOrder = () => {
                    const regions = [];

                    document.querySelectorAll('.accordion-region').forEach((regionEl, regionIndex) => {
                        const centerId = regionEl.dataset.centerId;

                        const prefs = [];
                        regionEl.querySelectorAll('.pref-block').forEach((prefEl, prefIndex) => {
                            prefs.push({
                                prefId: prefEl.dataset.prefId,
                                displayOrder: prefIndex
                            });
                        });

                        regions.push({
                            centerBlockId: centerId,
                            displayOrder: regionIndex,
                            prefectures: prefs
                        });
                    });

                    return regions;
                };

                const saveSortOrder = async () => {
                    const payload = {
                        userId: '@Model.User.UserId',
                        regions: collectSortOrder()
                    };

                    await fetch('/User/SaveDisplayOrder', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify(payload)
                    });
                };
                </text>
            }
        });
    </script>
</body>
</html>